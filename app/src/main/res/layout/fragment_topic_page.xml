<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TopicPageFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        tools:context=".TopicPage">

        <TextView
            android:id="@+id/topic_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20dp"
            android:text="CHOOSE YOUR EVENT"
            android:textAlignment="center"
            android:textSize="20dp" />


        <TableLayout
            android:id="@+id/topictable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            app:layout_constraintTop_toBottomOf="@+id/topic_header">

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageButton
                    android:id="@+id/btn_camp"
                    android:layout_width="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    tools:srcCompat="@drawable/ic_launcher_foreground" />

                <ImageButton
                    android:id="@+id/btn_swim"
                    android:layout_width="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    tools:srcCompat="@drawable/ic_launcher_foreground" />

                <ImageButton
                    android:id="@+id/btn_music"
                    android:layout_width="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    tools:srcCompat="@drawable/ic_launcher_foreground" />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <ImageButton
                    android:id="@+id/btn_cycle"
                    android:layout_width="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    tools:srcCompat="@drawable/ic_launcher_foreground" />

                <ImageButton
                    android:id="@+id/btn_travel"
                    android:layout_width="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    tools:srcCompat="@drawable/ic_launcher_foreground" />

                <ImageButton
                    android:id="@+id/btn_art"
                    android:layout_width="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    tools:srcCompat="@drawable/ic_launcher_foreground" />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <ImageButton
                    android:id="@+id/btn_read"
                    android:layout_width="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    tools:srcCompat="@drawable/ic_launcher_foreground" />

                <ImageButton
                    android:id="@+id/btn_sport"
                    android:layout_width="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    tools:srcCompat="@drawable/ic_launcher_foreground" />

                <ImageButton
                    android:id="@+id/btn_yoga"
                    android:layout_width="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    tools:srcCompat="@drawable/ic_launcher_foreground" />
            </TableRow>


        </TableLayout>

        <EditText
            android:id="@+id/editTextTextPersonName2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:ems="10"
            android:hint="Add Another Event"
            app:layout_constraintTop_toBottomOf="@id/topictable" />

        <Button
            android:id="@+id/btn_save_topic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="save"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName2"></Button>

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>